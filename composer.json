{
    "name": "chi-teck/micro-router",
    "description": "Micro router",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "psr/http-message": "^1.0",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.3",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/var-dumper": "^5.2"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MicroRouter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MicroRouter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "phpcs -p",
        "test": "phpunit"
    }
}
